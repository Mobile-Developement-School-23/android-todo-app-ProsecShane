<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomMatButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:focusable">true</item>

        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/outline_color</item>
        <item name="elevation">4dp</item>

        <item name="rippleColor">@color/ripple_color</item>

        <item name="android:textColor">?attr/colorOnBackground</item>

        <item name="android:layout_height">55dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="CustomMatButton.Editable">
        <item name="icon">@drawable/ic_edit</item>
        <item name="iconTint">?attr/colorOnBackground</item>
        <item name="iconGravity">end</item>

        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>



    <style name="CustomImgButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:focusable">true</item>

        <item name="tint">?attr/colorOnBackground</item>
        <item name="rippleColor">@color/ripple_color</item>
        <item name="elevation">4dp</item>

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">11dp</item>
    </style>

    <style name="CustomImgButton.WithMargin">
        <item name="android:layout_margin">8dp</item>
    </style>



    <style name="TodoAppText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/colorOnBackground</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TodoAppText.Header">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TodoAppText.SubHeader">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TodoAppText.Large">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TodoAppText.Regular">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TodoAppText.Regular.PreviewItem">
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>

        <item name="android:drawablePadding">5dp</item>

        <item name="android:padding">8dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="TodoAppText.Sub">
        <item name="android:textSize">14sp</item>

        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

</resources>
